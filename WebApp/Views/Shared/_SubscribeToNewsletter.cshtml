@model SubscribeViewModel

<section id="subscribe" class="subscribe">
    <div class="container">
        <div class="title">
            <h2>Don't Want to Miss Anything?</h2>
            <img src="~/images/icons/arrows.svg" alt="swirl arrow">
        </div>
       
        <form method="post" asp-action="Subscribe" asp-controller="Default">
            <div class="alternative">
                <h4>Sign up for Newsletters</h4>

                <div class="options">

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="DailyNewsletter" />
                            <label asp-for="DailyNewsletter"></label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="AdvertisingUpdates" />
                            <label asp-for="AdvertisingUpdates"></label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="WeekinReviews" />
                            <label asp-for="WeekinReviews"></label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="EventUpdate" />
                            <label asp-for="EventUpdate"></label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="StartupsWeekly" />
                            <label asp-for="StartupsWeekly"></label>
                        </div>
                    </div>

                    <div class="checkbox-group">
                        <div class="input-group">
                            <input asp-for="Podcaste" />
                            <label asp-for="Podcaste"></label>
                        </div>
                    </div>

                </div>

            </div>

            <div class="form-email">
                <div class="input-group">
                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email" />
                </div>
                <button type="submit" class="btn-theme">Subscribe*</button>
            </div>

            @if (!string.IsNullOrEmpty(TempData["StatusMessage"]?.ToString()))
            {
                <span class="status-message">@TempData["StatusMessage"]</span>
            }
            else
            {
                <span class="status-message">  * Yes, I agree to the privacy policy. </span>
            }
        </form>
        

    </div>
</section>
